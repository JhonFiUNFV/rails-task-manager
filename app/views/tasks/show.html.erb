
<div class="container pt-3">
  <h1><%= @task.title %></h1>
  <p class="well"><%= @task.details %></p>

  <% if @task.completed %>
    <i class="fa fa-check-square-o"></i> This task is completed
  <% else %>
    <i class="fa fa-square-o"></i> This task is not completed yet
  <% end %>

  <div class="card-text">
    <%= link_to 'Edit', edit_task_url(@task), class: "btn btn-primary" %>
    <%= link_to 'Back', tasks_path, class: "btn btn-info" %>
  </div>


</div>
